---
import Base from '@/layouts/Base.astro';
---

<Base title="Crear producto" description="Crea productos locales sin Shopify">
  <section class="section">
    <div class="container">
      <h1 class="h3">Crear nuevo producto</h1>
      <p class="text-muted">Este formulario guarda en <code>src/data/products.json</code>.</p>

      <form id="product-form" class="space-y-4" autocomplete="off">
        <div class="grid" style="gap: 1rem; grid-template-columns: 1fr 1fr;">
          <div>
            <label for="title" class="label">Título</label>
            <input id="title" name="title" class="input" required placeholder="Ej. Camiseta básica" />
          </div>
          <div>
            <label for="vendor" class="label">Marca / Vendor</label>
            <input id="vendor" name="vendor" class="input" placeholder="Ej. MiMarca" />
          </div>

          <div class="col-span-2">
            <label for="description" class="label">Descripción</label>
            <textarea id="description" name="description" class="textarea" rows="4" placeholder="Descripción del producto"></textarea>
          </div>

          <div>
            <label for="collections" class="label">Colecciones (coma)</label>
            <input id="collections" name="collections" class="input" placeholder="Ej. destacados, verano" />
          </div>
          <div>
            <label for="tags" class="label">Etiquetas (coma)</label>
            <input id="tags" name="tags" class="input" placeholder="Ej. algodón, unisex" />
          </div>

          <div>
            <label for="price" class="label">Precio</label>
            <input id="price" name="price" class="input" type="number" step="0.01" required placeholder="Ej. 19.99" />
          </div>
          <div>
            <label for="currencyCode" class="label">Moneda</label>
            <input id="currencyCode" name="currencyCode" class="input" value="USD" placeholder="Ej. USD" />
          </div>

          <div class="col-span-2">
            <label for="imageUrl" class="label">Imagen principal (URL)</label>
            <input id="imageUrl" name="imageUrl" class="input" placeholder="/images/product-1.png o URL completa" />
          </div>
        </div>

        <div class="mt-4">
          <button type="submit" class="btn btn-primary">Guardar producto</button>
        </div>
      </form>

      <p id="status" class="mt-3"></p>
    </div>
  </section>

  <script>
    (function () {
      const form = document.getElementById('product-form');
      const statusEl = document.getElementById('status');

      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        statusEl.textContent = 'Guardando...';

        const fd = new FormData(form);
        const payload = {
          title: fd.get('title'),
          description: fd.get('description'),
          vendor: fd.get('vendor'),
          collections: String(fd.get('collections') || '')
            .split(',')
            .map((s) => s.trim())
            .filter(Boolean),
          tags: String(fd.get('tags') || '')
            .split(',')
            .map((s) => s.trim())
            .filter(Boolean),
          price: fd.get('price'),
          currencyCode: fd.get('currencyCode'),
          imageUrl: fd.get('imageUrl'),
        };

        try {
          const res = await fetch('/api/products', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(payload),
          });

          const json = await res.json();
          if (res.ok) {
            statusEl.innerHTML = 'Producto creado — ';
            const a = document.createElement('a');
            a.href = `/products/${json.product.handle}`;
            a.textContent = 'Ver producto';
            statusEl.appendChild(a);
            form.reset();
          } else {
            statusEl.textContent = 'Error: ' + (json.error || 'No se pudo crear');
          }
        } catch (err) {
          statusEl.textContent = 'Error de red: ' + String(err);
        }
      });
    })();
  </script>
</Base>